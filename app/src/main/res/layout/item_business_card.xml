<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://shemas.android.com/apk/res/android"
    xmlns:android="http://shemas.android.com/apk/res-auto"
    xmlns:android="http://shemas.android.com/apk/res/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_heigth="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_content"
        layout_width="match_parent"
        layout_height="0dp"
        android1:checkable="true"
        android1:clickable="true"
        android1:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="16:9"
        android1:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:layout_margin="16dp">

            <com.google.android.material.textview.MaterialTextView
                android1:id="@+id/tv_nome"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rodrigo Melo"/>

            <com.google.android.material.textview.MaterialTextView
                android1:id="@+id/tv_telefone"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_nome"
                tools:text="Telefone"/>

            <com.google.android.material.textview.MaterialTextView
                android1:id="@+id/tv_email"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_telefone"
                tools:text="E-mail"/>

            <com.google.android.material.textview.MaterialTextView
                android1:id="@+id/tv_empresa"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:text="Nome da Empresa"/>

            </com.google.android.material.textview.MaterialTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>